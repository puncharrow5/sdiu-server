// 배경 종류
enum BackgroundType {
    COLOR
    IMAGE
}

// 컴포넌트 스타일
model ComponentStyle {
    id             Int             @id @default(autoincrement())
    height         String?
    padding        String?
    gap            String?
    background     String?
    backgroundType BackgroundType?

    // 컴포넌트
    componentId Int       @unique
    component   Component @relation(fields: [componentId], references: [id])
}

// 제목 스타일
model TitleStyle {
    id         Int     @id @default(autoincrement())
    margin     String?
    textSize   Int?
    textColor  String?
    lineHeight Int?

    // 컴포넌트
    componentId Int       @unique
    component   Component @relation(fields: [componentId], references: [id])
}

// 내용 스타일
model ContentStyle {
    id         Int     @id @default(autoincrement())
    margin     String?
    textSize   Int?
    textColor  String?
    lineHeight Int?

    // 컴포넌트
    componentId Int       @unique
    component   Component @relation(fields: [componentId], references: [id])
}

// 자식 컴포넌트 스타일
model ChildStyle {
    id             Int             @id @default(autoincrement())
    width          String?
    height         String?
    margin         String?
    padding        String?
    background     String?
    backgroundType BackgroundType?
    border         String?
    borderRadius   String?

    // 자식 컴포넌트
    childId Int   @unique
    child   Child @relation(fields: [childId], references: [id])
}
