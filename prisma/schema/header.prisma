// 헤더
model Header {
    id              Int     @id @default(autoincrement())
    logo            String?
    logoSize        String?
    height          Int?
    backgroundColor String?
    textSize        Int?
    textColor       String?

    // 사이트
    siteId Int?  @unique
    site   Site? @relation(fields: [siteId], references: [id])
}
