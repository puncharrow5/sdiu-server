// 컴포넌트 종류
enum ComponentType {
    POPUP
    SECTION
    INQUIRY
    FOOTER
}

// 배경 종류
enum BackgroundType {
    COLOR
    IMAGE
}

// 컴포넌트
model Component {
    id             Int             @id @default(autoincrement())
    componentType  ComponentType
    name           String
    title          String?
    titleStyle     TitleStyle?
    content        String?
    contentStyle   ContentStyle?
    background     String?
    backgroundType BackgroundType?

    // 사이트
    siteId Int
    site   Site @relation(fields: [siteId], references: [id])
}
