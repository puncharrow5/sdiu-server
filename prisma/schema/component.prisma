// 컴포넌트 타입
enum ComponentType {
    Header
    Popup
    Section
    Footer
}

// 컴포넌트
model Component {
    id         Int           @id @default(autoincrement())
    type       ComponentType
    name       String?
    title      String?
    content    String?
    background String?

    // 사이트
    siteId Int
    Site   Site @relation(fields: [siteId], references: [id])
}
