// 컴포넌트 종류
enum ComponentType {
    Popup
    Section
    Inquiry
    Footer
}

// 컴포넌트
model Component {
    id            Int           @id @default(autoincrement())
    componentType ComponentType
    name          String
    title         String?
    titleStyle    String?
    content       String?
    contentStyle  String?
    background    String?

    // 사이트
    siteId Int
    site   Site @relation(fields: [siteId], references: [id])
}
